%{!?kmoddir:%define kmoddir %(/bin/ls -tr /lib/modules | tail -1)}
%{!?ksrcdir:%define ksrcdir %(/bin/ls -tr /usr/src/kernels | tail -1)}
%{!?buildversion:%define buildversion 1}

%define _unpackaged_files_terminate_build 0 

Name: openvswitch-gbp-kmod
Summary: Open vSwitch Kernel Modules
Group: System/Kernel
URL: http://www.openvswitch.org/
Vendor: OpenSource Security Ralf Spenneberg <ralf@os-s.net>
Version: @VERSION@

# The entire source code is ASL 2.0 except datapath/ which is GPLv2
License: GPLv2
Release: %{buildversion}%{?dist}
Source: openvswitch-%{version}.tar.gz
BuildRequires: %kernel_module_package_buildreqs
Provides: openvswitch-gbp-kmod
Obsoletes: openvswitch-kmod

%description
Open vSwitch provides standard network bridging functions augmented with
support for the OpenFlow protocol for remote per-flow control of
traffic. This package contains the kernel modules.

%prep
%setup -q -n openvswitch-%{version}
cat > openvswitch.conf <<EOF
override openvswitch * extra/openvswitch
override openvswitch * weak-updates/openvswitch
EOF

%build
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=%{_localstatedir} --with-linux=/lib/modules/%{kmoddir}/build --enable-ssl
make %{_smp_mflags} -C datapath/linux

%install
export INSTALL_MOD_PATH=$RPM_BUILD_ROOT
export INSTALL_MOD_DIR=extra/openvswitch
make -C /usr/src/kernels/%{ksrcdir} modules_install M="`pwd`"/datapath/linux

install -d %{buildroot}%{_sysconfdir}/depmod.d/
install -m 644 openvswitch.conf %{buildroot}%{_sysconfdir}/depmod.d/

%clean
rm -rf $RPM_BUILD_ROOT

%post
if [ -e "/boot/System.map-%{kmoddir}" ]; then
    /sbin/depmod -aeF /boot/System.map-%{kmoddir} %{kmoddir} > /dev/null || :
fi

modules=( $(find /lib/modules/%{kmoddir}/extra/openvswitch/ -name '*.ko') )
if [ -x "/sbin/weak-modules" ]; then
    printf '%s\n' "${modules[@]}"     | /sbin/weak-modules --add-modules
fi


%preun
find /lib/modules/%{kmoddir}/extra/openvswitch/ -name '*.ko' > /var/run/rpm-kmod-%{name}-modules

%postun
if [ -e "/boot/System.map-%{kmoddir}" ]; then
    /sbin/depmod -aF /boot/System.map-%{kmoddir} %{kmoddir} > /dev/null || :
fi
if [ "$1" = 0 ];then
    modules=( $(cat /var/run/rpm-kmod-%{name}-modules) )
    if [ -x "/sbin/weak-modules" ]; then
        printf '%s\n' "${modules[@]}"         | /sbin/weak-modules --remove-modules
    fi
fi

%files
%defattr(-,root,root)
/lib/modules/%{kmoddir}/extra/openvswitch/openvswitch.ko
%config %{_sysconfdir}/depmod.d/openvswitch.conf

